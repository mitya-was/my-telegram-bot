function createFolderStructure(formData) {
  const parentFolder = DriveApp.getFolderById(CONFIG.DRIVE_FOLDER_ID);
  
  // –ù–∞–∑–≤–∞ –ø–∞–ø–∫–∏: –Ω–æ–º–µ—Ä_–ù–∞–∑–≤–∞–ö–ª—ñ—î–Ω—Ç–∞
